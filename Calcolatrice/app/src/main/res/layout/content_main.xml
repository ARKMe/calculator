<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:background="@android:color/white"
        android:textSize="30sp"
        android:padding="5dp"
        android:text="0"
        android:gravity="right"/>

    <TableLayout
        android:id="@+id/numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/button1"
                android:text="1"
                style="@style/mioStile"
                />

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/button2"
                android:text="2"
                style="@style/mioStile"/>

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/button3"
                android:text="3"
                style="@style/mioStile"/>

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/plus_sign_button"
                android:text="+"
                android:layout_marginLeft="20dp"
                style="@style/mioStile"/>

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/minus_sign_button"
                android:text="-"
                style="@style/mioStile"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/button4"
                android:text="4"
                style="@style/mioStile"/>

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/button5"
                android:text="5"
                style="@style/mioStile"/>

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/button6"
                android:text="6"
                style="@style/mioStile"/>

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/times_sign_button"
                android:text="x"
                android:layout_marginLeft="20dp"
                style="@style/mioStile"/>

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/division_sign_button"
                android:text="/"
                style="@style/mioStile"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/button7"
                android:text="7"
                style="@style/mioStile"/>

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/button8"
                android:text="8"
                style="@style/mioStile"/>

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/button9"
                android:text="9"
                style="@style/mioStile"/>

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/cancel_button"
                android:text="C"
                android:layout_marginLeft="20dp"
                style="@style/mioStile"
                android:layout_weight="1" />

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/equals_sign_button"
                android:text="="
                style="@style/mioStile"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"/>

            <bello.andrea.calcolatrice.MioBottone
                android:id="@+id/button0"
                android:text="0"
                style="@style/mioStile"
                android:layout_marginRight="20dp"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>